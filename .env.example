# ViaBill API Configuration
# Get these from your ViaBill merchant dashboard

# Your ViaBill API Key (public, safe to expose)
NEXT_PUBLIC_API_KEY=your_api_key_here

# Your ViaBill Secret Key (private, never commit to git)
VIABILL_SECRET_KEY=your_secret_key_here

# Test mode - set to "true" for testing, "false" for production
NEXT_PUBLIC_TEST_MODE=true

# Your addon/integration name
NEXT_PUBLIC_ADDON_NAME=CUSTOM

# Your application URL (used for success/cancel/callback redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000
